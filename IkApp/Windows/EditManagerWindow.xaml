<Window x:Class="IkApp.Windows.EditManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IkApp.Windows"
        mc:Ignorable="d"
        Title="EditManagerWindow" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="33" Margin="129,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240" FontSize="20"/>
        <TextBox x:Name="Password"  HorizontalAlignment="Left" Height="33" Margin="129,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240" FontSize="20"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="29,70,0,0" VerticalAlignment="Top" Height="33" Width="66" FontSize="20"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="29,120,0,0" VerticalAlignment="Top" Height="33" Width="80" FontSize="20"/>
        <Button x:Name="Add" Content="Добавить" HorizontalAlignment="Left" Margin="130,200,0,0" VerticalAlignment="Top" Width="170" Height="50" FontSize="22" Click="Add_Click"/>
        <Label Content="Добавление и изменение пользователя" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" Width="340" Height="39" FontSize="18"/>
    </Grid>
</Window>
